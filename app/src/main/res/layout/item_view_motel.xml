<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Ảnh -->
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_image" />


            <!-- Tiêu đề -->
            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="abc"
                android:textColor="#4CAF50"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Mô tả -->
            <TextView
                android:id="@+id/text_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="abc"
                android:textSize="16sp"
                android:textStyle="italic" />

            <!-- Địa chỉ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="4dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_location"
                    android:tint="#444" />

                <TextView
                    android:id="@+id/diachi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="6dp"
                    android:text="Địa chỉ: abc, Hà Nội, Ba Đình"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Giá -->
            <TextView
                android:id="@+id/gia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Giá: 123VND"
                android:textColor="#F44336"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Diện tích -->
            <TextView
                android:id="@+id/txt_dientich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="Diện tích: 12 m²"
                android:textSize="14sp" />

            <!-- Số điện thoại -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="2dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_phone"
                    android:tint="#444" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="6dp"
                    android:text="Số điện thoại liên hệ: 092573455"
                    android:textSize="14sp" />
            </LinearLayout>
            <!-- Hình thức -->
            <TextView
                android:id="@+id/hinhthuc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hình thức: Ở ghép"
                android:textSize="14sp"
                android:paddingTop="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
